    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  </head>
  <body>
   
   <div class="all">
     <div class="header">
      <li>
       <%= link_to('マイページ','/home/new',:style=>"color:white;") %>
      </li>
      <li>
       <%= link_to('プロフィール作成','/profile/new',:style=>"color:white;") %>
      </li>
      <li>
       <%= link_to('トップページ','/',:style=>"color:white;") %>
      </li>
      <li id="btn">
       豆知識
       <div class="text-content">
        <p>
         豆知識1
        </p>
        <p>
         豆知識2
        </p>
        <p>
         豆知識3
        </p>
        <p>
         豆知識4
        </p>
        <p>
         豆知識5
        </P>
       </div>
      </li>
      <li>
      <p>
       <%= link_to "新規登録",new_user_registration_path,:style=>"color:white;" %>
      </p>
      <P>
       <%= link_to "ログイン",new_user_session_path,:style=>"color:white;" %>
      </p>
      <p>
       <%= link_to "ログアウト",destroy_user_session_path, method: :delete,:style=>"color:white;" %>
      </p>
      </li>
    </div>
   </div>

   <script>
    $('#btn').hover(
     function(){
       $(this).find('.text-content').addClass('text-active');
     },
     function(){
       $(this).find('.text-content').removeClass('text-active');
     }
   );
   </script>

    <%= yield %>
  </body>
</html>
